<%- include('header.ejs') %>
  <body>
    <h1>Welcome to LangSniffer</h1>
    <p>Please enter a phrase from any language:</p>
    <form action="/" method="POST">
      <textarea name="phrase" id="phrase"></textarea>
      <input type="submit" value="Submit" />
    </form>
    <p>
      <% if (langName) { %> The language of your phrase is <%= langName %>. <% }
      %>
    </p>
  </body>
</html>
